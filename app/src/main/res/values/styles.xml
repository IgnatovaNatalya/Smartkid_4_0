<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- choose level screen -->
    <style name="a4_level_text_style">
        <item name="fontFamily">@font/noto_sans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="a4_level_group_text_style">
        <item name="fontFamily">@font/noto_sans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="a4_level_codename_style">
        <item name="fontFamily">@font/noto_sans_black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="a4_level_title_style">
        <item name="fontFamily">@font/noto_sans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/a4_black</item>
    </style>

    <style name="a4_level_button_style">
        <item name="fontFamily">@font/noto_sans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

<!-- game screen-->

    <style name="a4_title_style">
        <item name="fontFamily">@font/noto_sans_semi_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/a4_grey</item>
        <item name="lineHeight">2sp</item>
    </style>

    <style name="a4_counter_style">
        <item name="fontFamily">@font/noto_sans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/a4_grey</item>
    </style>

    <style name="a4_task_style">
        <item name="fontFamily">@font/noto_sans_italic</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/a4_black</item>
    </style>

    <style name="a4_number_style">
        <item name="fontFamily">@font/noto_sans_extra_bold_italic</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>



    <style name="LevelTextStyle">
        <item name="fontFamily">@font/noto_sans_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleStyle1">
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/letter_shadow_transparent</item>

        <item name="android:shadowDx">12</item>
        <item name="android:shadowDy">12</item>
        <item name="android:shadowRadius">1</item>
        <item name="outlineColor">@color/black</item>
        <item name="outlineSize">13sp</item>
    </style>

    <style name="TitleStyle2">
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/letter_shadow_transparent</item>

        <item name="android:shadowDx">12</item>
        <item name="android:shadowDy">12</item>
        <item name="android:shadowRadius">1</item>
        <item name="outlineColor">@color/black</item>
        <item name="outlineSize">13sp</item>
    </style>

    <style name="PlayerStyle">
        <item name="android:textSize">90sp</item>
        <item name="android:textColor">@color/orange_yellow</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/letter_shadow_transparent</item>

        <item name="android:shadowDx">12</item>
        <item name="android:shadowDy">12</item>
        <item name="android:shadowRadius">1</item>
        <item name="outlineColor">@color/black</item>
        <item name="outlineSize">16sp</item>

        <item name="shaderBackground">1</item>

    </style>


    <style name="CorrectFieldStyle">
        <item name="android:textSize">50sp</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:shadowColor">@color/red</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WrongFieldStyle" >
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="NormalTextStyle" >
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NormalTextStyleBlack" parent="NormalTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TaskTextStyle" >
        <item name="android:textSize">45sp</item>
        <item name="fontFamily">@font/rubik_italic</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="TaskFieldStyle">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">320dp</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="OutlinedTextStyleLevels">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/letter_shadow_brown</item>

        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">1</item>

        <item name="outlineColor">@color/black</item>
        <item name="outlineSize">6dp</item>

        <item name="shadow2Color">@color/letter_shadow_light_beige</item>
        <item name="shadow2Dx">8</item>
        <item name="shadow2Dy">8</item>
        <item name="shadow2Radius">1</item>
    </style>

    <style name="OutlinedTextStyleLevelGroup">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:letterSpacing">.32</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/letter_shadow_wine_red</item>

        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">1</item>

        <item name="outlineColor">@color/black</item>
        <item name="outlineSize">6dp</item>

        <item name="shadow2Color">@color/letter_shadow_light_pink</item>
        <item name="shadow2Dx">8</item>
        <item name="shadow2Dy">8</item>
        <item name="shadow2Radius">1</item>
    </style>

    <style name="OutlinedTextStyle_large" parent ="OutlinedTextStyleLevels">
        <item name="android:textSize">68sp</item>
        <item name="android:shadowDx">12</item>
        <item name="android:shadowDy">12</item>
        <item name="android:shadowRadius">1</item>
        <item name="outlineSize">12dp</item>
        <item name="shadow2Dx">20</item>
        <item name="shadow2Dy">20</item>
        <item name="shadow2Radius">1</item>
    </style>

    <style name="OutlinedTextStyleRubik">
        <item name="android:textColor">@color/yellow</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowColor">@color/letter_shadow_brown</item>

        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">1</item>

        <item name="outlineColor">@color/black</item>
        <item name="outlineSize">9dp</item>

        <item name="shadow2Color">@color/letter_shadow_light_beige</item>
        <item name="shadow2Dx">11</item>
        <item name="shadow2Dy">11</item>
        <item name="shadow2Radius">1</item>
    </style>

    <style name="OutlinedTextStyleRubik_active" parent= "OutlinedTextStyleRubik">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="OutlinedButtonStyle2">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/letter_shadow_green</item>

        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">1</item>

        <item name="outlineColor">@color/black</item>
        <item name="outlineSize">9dp</item>

        <item name="shadow2Color">@color/letter_shadow_light_green</item>
        <item name="shadow2Dx">11</item>
        <item name="shadow2Dy">11</item>
        <item name="shadow2Radius">1</item>
    </style>


    <style name="dialog_style" parent="Theme.AppCompat.Light.Dialog.Alert" >
        <item name="android:windowBackground">@color/transparent</item>
        <item name="titleCentered">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="user_menu_style_normal">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/user_menu_text_size_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="user_menu_style_selected">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/user_menu_text_size_selected</item>
        <item name="android:textColor">@color/orange_yellow</item>
    </style>

</resources>