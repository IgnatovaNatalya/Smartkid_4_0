<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.StatActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/imageView_backWinter"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/back_winter"
            android:layout_width="880dp"
            android:layout_height="wrap_content"
            tools:ignore="VisualLintBounds" />
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_Leaders"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginBottom="40dp"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_leader"/>

    <ImageView
        android:id="@+id/imageView_Leaders_OK"
        android:layout_width="220dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-30dp"

        app:layout_constraintBottom_toBottomOf="@+id/recycler_Leaders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/btn_ok_blank"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="34dp"
        android:src="@drawable/arrow_left"
        app:layout_constraintTop_toTopOf="@+id/imageView_Leaders_OK"
        app:layout_constraintStart_toStartOf="@+id/imageView_Leaders_OK"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_Leaders_OK"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="34dp"
        android:src="@drawable/arrow_right"
        app:layout_constraintTop_toTopOf="@+id/imageView_Leaders_OK"
        app:layout_constraintEnd_toEndOf="@+id/imageView_Leaders_OK"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_Leaders_OK"/>

    <ImageView
        android:id="@+id/imageView_Stat_buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn_back" />

</androidx.constraintlayout.widget.ConstraintLayout>