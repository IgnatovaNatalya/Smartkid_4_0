<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <TextView
        android:id="@+id/textView_Stat_Date"
        android:layout_width="wrap_content"
        android:layout_height="26sp"
        android:gravity="bottom"
        style="@style/NormalTextStyle"
        android:textColor="@color/letter_shadow_brown"
        tools:text ="сегодня"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/ll_Stat_level"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textView_Stat_Date"
        app:layout_constraintStart_toStartOf="parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <!--TextView
            style="@style/NormalTextStyleBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="уровень"/-->

        <ru.mamsikgames.smartkid.ui.util.TextViewOutline
            android:id="@+id/textView_Stat_Level"
            style="@style/OutlinedTextStyleRubik"
            android:textSize="36sp"
            android:layout_width="72sp"
            android:layout_height="58sp"
            android:gravity="center"
            tools:text="C-1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Stat_2"
        android:layout_width="wrap_content"
        android:layout_height="130sp"
        android:orientation="vertical"
        android:gravity="left|center"
        app:layout_constraintTop_toBottomOf="@+id/textView_Stat_Date"
        app:layout_constraintStart_toEndOf="@+id/ll_Stat_level"     >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left" >
            <ru.mamsikgames.smartkid.ui.util.TextViewOutline
                android:id="@+id/textView_Stat_NumCorrect"
                style="@style/OutlinedTextStyleRubik_active"
                android:layout_width="68sp"
                android:layout_height="38sp"
                android:gravity="center"
                tools:text="100" />
            <TextView
                style="@style/NormalTextStyleBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="задач"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <ru.mamsikgames.smartkid.ui.util.TextViewOutline
                android:id="@+id/textView_Stat_NumWrong"
                style="@style/OutlinedTextStyleRubik_active"
                android:textSize="20sp"
                android:layout_width="68sp"
                android:layout_height="38sp"
                android:gravity="center"
                tools:text="45" />
            <TextView
                style="@style/NormalTextStyleBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ошибок"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">
            <ru.mamsikgames.smartkid.ui.util.TextViewOutline
                android:id="@+id/textView_Stat_NumExits"
                style="@style/OutlinedTextStyleRubik_active"
                android:textSize="20sp"
                android:layout_width="68sp"
                android:layout_height="38sp"
                android:gravity="center"
                tools:text="3" />
            <TextView
                style="@style/NormalTextStyleBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="выходов"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>