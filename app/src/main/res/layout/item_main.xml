<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_levelGroup"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView_bgLevelGroup"
            android:layout_width="350dp"
            android:layout_height="68dp"

            app:srcCompat="@drawable/bg_band"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:importantForAccessibility="no" />

        <ru.mamsikgames.smartkid.ui.util.TextViewOutline
            android:id="@+id/TextView_levelGroup"
            style="@style/OutlinedTextStyleLevelGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            tools:text="Умножение"

            app:layout_constraintBottom_toBottomOf="@+id/imageView_bgLevelGroup"
            app:layout_constraintEnd_toEndOf="@+id/imageView_bgLevelGroup"
            app:layout_constraintStart_toStartOf="@+id/imageView_bgLevelGroup"
            app:layout_constraintTop_toTopOf="@+id/imageView_bgLevelGroup"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="72dp"
        android:orientation="horizontal"

        android:gravity="center_vertical|left"

        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_levelGroup"
        app:layout_constraintStart_toStartOf="@+id/ll_levelGroup"
        app:layout_constraintEnd_toEndOf="@+id/ll_levelGroup">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="70dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/imageView_bgLevel"
                android:layout_width="70dp"
                android:layout_height="58dp"

                app:srcCompat="@drawable/button_blank_oval"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:importantForAccessibility="no" />

            <ru.mamsikgames.smartkid.ui.util.TextViewOutline
                android:id="@+id/TextView_Level"
                style="@style/OutlinedTextStyleLevels"
                android:layout_width="65sp"
                android:layout_height="40sp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:paddingEnd="2dp"

                tools:text="C-2"

                app:layout_constraintBottom_toBottomOf="@+id/imageView_bgLevel"
                app:layout_constraintEnd_toEndOf="@+id/imageView_bgLevel"
                app:layout_constraintStart_toStartOf="@+id/imageView_bgLevel"
                app:layout_constraintTop_toTopOf="@+id/imageView_bgLevel"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/TextView_Level_name"
            style="@style/LevelTextStyle"
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"

            android:gravity="center|left"
            tools:text="Умножение двузначных чисел между собой и иксом с игреком и зетом x * y * z"

            app:layout_constraintBottom_toBottomOf="@+id/imageView_bgLevel"
            app:layout_constraintStart_toEndOf="@+id/imageView_bgLevel"
            app:layout_constraintTop_toTopOf="@+id/imageView_bgLevel" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>