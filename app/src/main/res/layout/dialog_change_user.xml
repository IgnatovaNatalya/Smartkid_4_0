<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_transparent"
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        app:srcCompat="@drawable/bg_transparent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/imageView_bgDialog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/bg_dialog_small"

        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toTopOf="@+id/imageView_transparent"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_transparent"
        app:layout_constraintStart_toStartOf="@+id/imageView_transparent"
        app:layout_constraintEnd_toEndOf="@+id/imageView_transparent"/>

    <ImageView
        android:id="@+id/imageView_Cancel"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/btn_cancel"

        app:layout_constraintTop_toTopOf="@+id/imageView_transparent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imageView_Ok"
        android:layout_width="200dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/btn_ok_blank"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView_transparent"
        app:layout_constraintStart_toStartOf="@id/imageView_transparent"
        app:layout_constraintEnd_toEndOf="@id/imageView_transparent"/>

    <ru.mamsikgames.smartkid.ui.TextViewOutline
        android:id="@+id/textView_Ok"
        style="@style/OutlinedButtonStyle2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="OK"

        app:layout_constraintTop_toTopOf="@id/imageView_Ok"
        app:layout_constraintBottom_toBottomOf="@id/imageView_Ok"
        app:layout_constraintStart_toStartOf="@id/imageView_Ok"
        app:layout_constraintEnd_toEndOf="@id/imageView_Ok"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_ChangeUser"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"

        android:layout_width="240dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="@+id/imageView_bgDialog"
        app:layout_constraintBottom_toTopOf="@id/imageView_Ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        tools:listitem="@layout/item_user"/>

</androidx.constraintlayout.widget.ConstraintLayout>