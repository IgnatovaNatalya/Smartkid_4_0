<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <ru.mamsikgames.smartkid.ui.util.TextViewOutline
        style="@style/TitleStyle2"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_marginBottom="-40dp"
        android:text="Счет"
        app:layout_constraintBottom_toTopOf="@+id/textView_itemLeaders_Name"
        app:layout_constraintStart_toStartOf="parent"/>

    <ru.mamsikgames.smartkid.ui.util.TextViewOutline
        android:id="@+id/textView_itemLeaders_Name"
        style="@style/PlayerStyle"
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:layout_marginTop="100dp"
        tools:text="Маша"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/imageView_bgLeaders"
        android:layout_width="0dp"
        android:layout_height="500dp"
        app:srcCompat="@drawable/bg_dialog_big"

        android:layout_marginTop="35dp"

        app:layout_constraintTop_toBottomOf="@+id/textView_itemLeaders_Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ru.mamsikgames.smartkid.ui.util.TextViewOutline
        android:id="@+id/textView_itemLeaders_NumTasks"
        style="@style/OutlinedTextStyle_large"
        android:layout_width="match_parent"
        android:layout_height="84sp"
        android:layout_marginTop="26dp"
        tools:text="100"
        app:layout_constraintTop_toTopOf="@+id/imageView_bgLeaders"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyleBlack"
        android:layout_marginTop="6dp"
        android:textSize="28sp"
        android:gravity="center"
        android:text="Задач"

        app:layout_constraintTop_toBottomOf="@+id/textView_itemLeaders_NumTasks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <LinearLayout
        android:id="@+id/ll_itemLeaders_stars"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_itemLeaders_NumTasks">

        <ImageView
            android:id="@+id/imageView_itemLeaders_star1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/imageView_itemLeaders_star2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/imageView_itemLeaders_star3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/imageView_itemLeaders_star4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/star_shadow" />

        <ImageView
            android:id="@+id/imageView_itemLeaders_star5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/star_shadow" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_itemLeaders_Rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyleBlack"
        android:layout_marginTop="6dp"
        android:textSize="28sp"
        android:gravity="center"
        tools:text="96%"

        app:layout_constraintTop_toBottomOf="@+id/ll_itemLeaders_stars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imageView_itemLeaders_Badge"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_itemLeaders_stars"
        app:srcCompat="@drawable/badge_1" />


</androidx.constraintlayout.widget.ConstraintLayout>